<%- include("partials/header") -%>


  <div class="container" style="margin-top: 100px;">
    <div class="row" style="box-shadow: 2px 4px 20px -8px; ">
      <div class="text-center div1 col-lg-6">
        <img class="my-image" src="images/logoLogin.png">
        <h1 style="font-family: 'UnifrakturMaguntia', cursive; color: white;">CollegeSpace Portal</h1>
        <p style="color: #e8f9e9">Glad you're here.</p>
        <p style="color: #e8f9e9; padding: 0 80px 0 80px;">Get insides of college and help others by answering their queries.</p>
      </div>
      <div class="div2 col-lg-6">
        <form action="/login" class="form-signin" method="POST">
          <p class="paragraph">Login into Portal</p>
          <p class="Label">Email Address</p>
          <input type="email" name="username" class="form-control bottom" placeholder="arijittripathi07@gmail.com" required>
          <p class="Label">Password</p>
          <input type="password" name="password" class="form-control bottom" placeholder="**********" required>
          <button style="margin-top: 20px; margin-bottom: 30px; padding: 5px 30px 5px 30px;" class="btn btn-sm btn-dark " type="submit">LOGIN</button>
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button"><i class="fab fa-google"></i>Sign In with Google</a>
          <p style="color: #1f4068; font-weight: bold; font-family: 'Exo', sans-serif;">Create an account?</p>
          <a style=" padding: 5px 30px 5px 30px;" class="btn btn-sm btn-dark " href="/register" role="button">Register</a>
        </form>
      </div>
    </div>

  </div>




