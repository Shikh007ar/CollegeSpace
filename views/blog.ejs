<%- include("partials/header") -%>



<div class="container" style="margin-top: 30px;">
  <p class="addingClick">Want to write a Blog? <a class="addingReview" href="/writingblog">Click Here</a> </p>

    <% blogName.forEach(function(user){ %>
      <div class="row" style="padding-left:20px; padding-right: 20px; margin-top: 20px;">

        <div class="col-lg-3 col-sm-3"  style="text-align: center;">
          <img class="blog-image" src="images/lady-img.jpg" alt="lady-profile">
        </div>
        <div class="col-lg-9 col-sm-9">
          <h4 class="blogName"><%= user.name %></h4>
          <p class="blogContent"><%= user.blogging %></p>
        </div>

      </div>
    <% }) %>


</div>





<%- include("partials/footer") -%>
